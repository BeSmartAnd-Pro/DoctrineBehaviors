{
    "name": "besmartand-pro/doctrine-behaviors",
    "description": "Doctrine Behavior Traits",
    "type": "symfony-bundle",
    "keywords": [
        "behaviors", "doctrine", "timestampable", "translatable", "blameable", "softdeletable", "tree", "uuid"
    ],
    "homepage": "https://github.com/BeSmartAnd-Pro/DoctrineBehaviors",
    "license": "MIT",
    "authors": [
        { "name": "Knplabs", "homepage": "http://knplabs.com" },
        { "name": "BeSmartAnd.Pro", "homepage":  "https://BeSmartAnd.Pro"}
    ],
    "require": {
        "php": ">=8.0",
        "doctrine/common": "^3.3",
        "doctrine/persistence": "^2.5|^3.0",
        "doctrine/dbal": "^3.0 | ^4.0",
        "doctrine/orm": "^3.0",
        "doctrine/doctrine-bundle": "^2.6",
        "symfony/cache": "^6 | ^7",
        "symfony/dependency-injection": "^6 | ^7",
        "symfony/http-kernel": "^6 | ^7",
        "symfony/security-core": "^6 | ^7",
        "symfony/framework-bundle": "^6 | ^7",
        "symfony/string": "^6 | ^7",
        "symfony/translation-contracts": "^2.4|^3.0",
        "nette/utils": "4.*",
        "ramsey/uuid": "^4.2",
        "symfony/security-bundle": "^6 | ^7"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "ext-pdo_sqlite": "*",
        "ext-pdo_mysql": "*",
        "ext-pdo_pgsql": "*",
        "psr/log": "^1.1",
        "doctrine/annotations": "^2.0",
        "php-parallel-lint/php-parallel-lint": "^1.4.0",
        "phpstan/phpstan": "^1.11.8",
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^0.13.4",
        "symplify/easy-coding-standard": "^12.3.4",
        "symplify/phpstan-extensions": "^11.4.3",
        "phpstan/phpstan-doctrine": "^1.3",
        "phpstan/phpstan-phpunit": "^1.1",
        "symplify/phpstan-rules": "^13.0.0",
        "phpstan/extension-installer": "^1.1",
        "symplify/easy-ci": "^10.2.9"
    },
    "autoload": {
        "psr-4": {
            "Knp\\DoctrineBehaviors\\": "src",
            "Knp\\DoctrineBehaviors\\PHPStan\\": "utils/phpstan-behaviors/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Knp\\DoctrineBehaviors\\Tests\\": "tests"
        }
    },
    "scripts": {
        "check-cs": "vendor/bin/ecs check --ansi",
        "fix-cs": "vendor/bin/ecs check --fix --ansi",
        "phpstan": "vendor/bin/phpstan analyse --ansi --error-format symplify"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "phpstan": {
            "includes": [
                "phpstan-extension.neon"
            ]
        }
    }
}
